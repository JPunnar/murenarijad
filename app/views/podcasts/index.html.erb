<br>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">
      <% if @podcasts.present? %>
        <br>
        <table class="table">
          <tr class="header-row" >
            <th>NR</th>
            <th>Pealkiri</th>
            <th>Kirjeldus</th>
          </tr>
          <% @podcasts.each do |podcast| %>
            <tr>
              <td><%= link_to podcast.number, podcast_path(podcast), class: 'episode-link btn btn-secondary' %></td>
              <td><%= podcast.title %></td>
              <td><%= podcast.description %></td>
            </tr>
          <% end %>
        </table>

      <% else %>
        <h5>Episoodid puuduvad.</h5>
      <% end %>
    </div>
  </div>
</div>
